<div class="index-view dashboard-content">

  <div class="game-world">
    <img src="favicon.ico" />
  </div>

  <p class="caption-header">Welcome! Would you like to ...</p>

  <a href="/users/new">
    <div class="listen">
      <h3>Start new game</h3>
    </div>
  </a>
</div>

<div class="index-view scroll-content">

  <p class="caption-header">or choose recent user</p>

  {{#each users}}
  <a href="/users/{{this._id}}">
    <div class="listen">
      <p>{{this.name}} |
        <span class="caption-details">owns {{this.landLots.length}} homes on {{this.landLots.length}} lots</span>
      </p>
    </div>
  </a>
  {{/each}}

</div>


